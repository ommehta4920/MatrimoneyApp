<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DashboardSquareCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item> <!-- fixed square height -->
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileInfoCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ProfileInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/romance_dark_red</item>
    </style>

    <style name="MyDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Header background color -->
        <item name="colorPrimary">@color/romance_red</item>
        <item name="colorPrimaryVariant">@color/romance_dark_red</item>

        <!-- Accent color (OK / Cancel button) -->
        <item name="colorAccent">@color/romance_red</item>

        <!-- Calendar day selector (highlight selected date) -->
        <item name="android:colorControlActivated">@color/romance_pink</item>

        <!-- Calendar day numbers / text -->
        <item name="android:textColorPrimary">@color/romance_dark_red</item>

        <!-- Background of dialog -->
        <item name="android:windowBackground">@color/romance_light_pink</item>
    </style>

</resources>