<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/romance_light_pink">

    <!-- Header -->
    <TextView
        android:id="@+id/tvChatHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat with User"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="14dp"
        android:gravity="center"
        android:background="@color/romance_red"
        android:elevation="4dp" />

    <!-- Chat messages list -->
    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:background="@color/romance_light_pink"/>

    <!-- Input section -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:elevation="6dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/romance_dark_red"
            android:textColorHint="@color/romance_pink"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/romance_red"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</LinearLayout>
