<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/romance_light_pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:text="Set Your Preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="14dp"
            android:gravity="center"
            android:background="@color/romance_red"
            android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
                <Spinner
                    android:id="@+id/spPreferredGender"
                    android:entries="@array/gender_array"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="12dp"
                    android:spinnerMode="dropdown"/>

                <EditText
                    android:id="@+id/etMinAge"
                    android:hint="Minimum Age"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etMaxAge"
                    android:hint="Maximum Age"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/etMinHeight"
                    android:hint="Minimum Height (cm)"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etMaxHeight"
                    android:hint="Maximum Height (cm)"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etReligion"
                    android:hint="Preferred Religion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/etCaste"
                    android:hint="Preferred Caste"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textColor="@color/romance_dark_red"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/btnSavePreferences"
                    android:text="Save Preferences"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/romance_red"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
