<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="10dp"/>

    <!-- Light pinkish background for romantic theme -->
    <solid android:color="@android:color/white"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/romance_red"/>

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

</shape>
